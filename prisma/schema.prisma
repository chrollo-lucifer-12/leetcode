generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  USER
  ADMIN
}

enum Language {
  JS
  CPP
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
}

model User {
  id         String       @id @default(uuid())
  username   String       @unique
  password   String
  Session    Session[]
  Submission Submission[]
  role       ROLE         @default(USER)
}

model DefaultCode {
  id       String   @id @default(uuid())
  language Language
  code     String
}

model Problem {
  id          String       @id @default(uuid())
  title       String
  description String
  TestCase    TestCase[]
  Submission  Submission[]
}

model TestCase {
  id        String  @id @default(uuid())
  input     String
  output    String
  problemId String
  problem   Problem @relation(fields: [problemId], references: [id])
}

model Submission {
  id        String   @id @default(uuid())
  problemId String
  problem   Problem  @relation(fields: [problemId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  code      String
  language  Language
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
